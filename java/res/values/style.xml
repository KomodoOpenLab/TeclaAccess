<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="symbol" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="clr_symbol" parent="@style/symbol">
        <item name="android:textColor">#326FBF</item>
    </style>
    <style name="tapinstructions" parent="@style/symbol">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="code_nopadding" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#F7F7F7</item>
    </style>
    <style name="code" parent="@style/code_nopadding">
        <item name="android:layout_marginRight">12dp</item>
    </style>
    <style name="cheatsheettable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>   
    </style>
    <style name="cheatsheetrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="cheatsheettoprow" parent="@style/cheatsheetrow">
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="cheatsheetbottomrow" parent="@style/cheatsheetrow">
        <item name="android:layout_marginBottom">0dp</item>
    </style> 
</resources>
